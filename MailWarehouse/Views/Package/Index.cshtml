@model IEnumerable<MailWarehouse.ViewModels.PackageViewModel>
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["IndexTitle"];
}

<style>
    .package-list-container {
        background-color: #f8f9fa;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .package-list-title {
        color: #343a40;
        margin-bottom: 30px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.05);
        text-align: center;
    }

    .create-new-container {
        display: flex;
        justify-content: center; /* Центруємо кнопку */
        margin-bottom: 20px;
    }

    .create-new-button {
        background-color: #28a745 !important;
        color: #fff !important; /* Білий текст */
        border: 2px solid #218838 !important; /* Додали межу */
        border-radius: 10px; /* Заокруглені кути */
        padding: 12px 24px !important; /* Збільшили відступи */
        font-size: 1.1rem; /* Збільшили розмір шрифту */
        font-weight: bold; /* Жирний шрифт */
        text-decoration: none !important; /* Прибрали підкреслення */
        transition: background-color 0.3s ease, transform 0.2s ease-in-out, border-color 0.3s ease;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Додали легку тінь */
    }

        .create-new-button:hover {
            background-color: #218838 !important; /* Змінили колір при наведенні */
            border-color: #1e7e34 !important; /* Змінили колір межі при наведенні */
            transform: scale(1.03); /* Легке збільшення при наведенні */
        }

    .package-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        border-radius: 10px;
        overflow: hidden;
    }

        .package-table thead {
            background-color: #343a40;
            color: #fff;
        }

        .package-table th, .package-table td {
            padding: 12px 15px;
            text-align: center;
            border-bottom: 1px solid #dee2e6;
        }

        .package-table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .package-table tbody tr:hover {
            background-color: #e9ecef;
            transition: background-color 0.3s ease;
        }

    .action-buttons a {
        margin: 5px;
        border-radius: 8px;
        transition: background-color 0.3s ease, transform 0.2s ease-in-out;
        text-decoration: none !important;
        display: inline-block;
        padding: 8px 12px;
        font-size: 0.9rem;
    }

        .action-buttons a.btn-warning {
            background-color: #ffc107;
            color: #212529;
            border: 1px solid #ffc107;
        }

            .action-buttons a.btn-warning:hover {
                background-color: #e0a800;
                transform: scale(1.03);
            }

        .action-buttons a.btn-info {
            background-color: #17a2b8;
            color: #fff;
            border: 1px solid #17a2b8;
        }

            .action-buttons a.btn-info:hover {
                background-color: #138496;
                transform: scale(1.03);
            }

        .action-buttons a.btn-danger {
            background-color: #dc3545;
            color: #fff;
            border: 1px solid #dc3545;
        }

            .action-buttons a.btn-danger:hover {
                background-color: #c82333;
                transform: scale(1.03);
            }

    .no-packages {
        padding: 20px;
        font-style: italic;
        color: #6c757d;
    }
</style>

<div class="container mt-4 package-list-container">
    <h1 class="mb-4 package-list-title">@ViewData["Title"]</h1>

    <div class="create-new-container">
        <a asp-action="Create" class="btn btn-success create-new-button">@Localizer["CreateNew"]</a>
    </div>

    <table class="table package-table">
        <thead class="table-dark">
            <tr>
                <th>@Localizer["TrackingNumber"]</th>
                <th>@Localizer["SenderId"]</th>
                <th>@Localizer["RecipientId"]</th>
                <th>@Localizer["SenderAddress"]</th>
                <th>@Localizer["RecipientAddress"]</th>
                <th>@Localizer["Weight"]</th>
                <th>@Localizer["Price"]</th>
                <th>@Localizer["Status"]</th>
                <th>@Localizer["CreatedAt"]</th>
                <th>@Localizer["DeliveredAt"]</th>
                <th class="text-center">@Localizer["Actions"]</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TrackingNumber</td>
                        <td>@item.SenderId</td>
                        <td>@item.RecipientId</td>
                        <td>@item.SenderAddress</td>
                        <td>@item.RecipientAddress</td>
                        <td>@item.Weight</td>
                        <td>@item.Price</td>
                        <td>@Localizer[item.Status.ToString()]</td>
                        <td>@item.CreatedAt.ToString("dd.MM.yyyy")</td>
                        <td>@item.DeliveredAt?.ToString("dd.MM.yyyy")</td>
                        <td class="text-center action-buttons">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">@Localizer["Edit"]</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">@Localizer["Details"]</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">@Localizer["Delete"]</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="11" class="text-center no-packages">@Localizer["NoPackages"]</td>
                </tr>
            }
        </tbody>
    </table>
</div>