@model MailWarehouse.ViewModels.PackageViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["DetailsTitle"];
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>@Localizer["PackageViewModel"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Localizer["TrackingNumber"]
        </dt>
        <dd class="col-sm-10">
            @Model.TrackingNumber
        </dd>
        <dt class="col-sm-2">
            @Localizer["SenderId"]
        </dt>
        <dd class="col-sm-10">
            @Model.SenderId
        </dd>
        <dt class="col-sm-2">
            @Localizer["RecipientId"]
        </dt>
        <dd class="col-sm-10">
            @Model.RecipientId
        </dd>
        <dt class="col-sm-2">
            @Localizer["SenderAddress"]
        </dt>
        <dd class="col-sm-10">
            @Model.SenderAddress
        </dd>
        <dt class="col-sm-2">
            @Localizer["RecipientAddress"]
        </dt>
        <dd class="col-sm-10">
            @Model.RecipientAddress
        </dd>
        <dt class="col-sm-2">
            @Localizer["Weight"]
        </dt>
        <dd class="col-sm-10">
            @Model.Weight
        </dd>
        <dt class="col-sm-2">
            @Localizer["Price"]
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
        <dt class="col-sm-2">
            @Localizer["Status"]
        </dt>
        <dd class="col-sm-10">
            @Localizer[Model.Status.ToString()]
        </dd>
        <dt class="col-sm-2">
            @Localizer["CreatedAt"]
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedAt
        </dd>
        <dt class="col-sm-2">
            @Localizer["DeliveredAt"]
        </dt>
        <dd class="col-sm-10">
            @Model.DeliveredAt
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">@Localizer["Edit"]</a> |
    <a asp-action="Index">@Localizer["BackToList"]</a>
</div>
