@model MailWarehouse.ViewModels.CreateRoleViewModel

<h2>Створити нову роль</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="RoleName">Назва ролі</label>
        <input asp-for="RoleName" class="form-control" required />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Створити</button>
    <a asp-action="RoleList" class="btn btn-secondary">Скасувати</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}